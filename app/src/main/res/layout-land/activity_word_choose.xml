<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cognitiveTraining.ContentChooseActivity"
    android:background="@drawable/main_background"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_back_WordChooseActivity"
        style="@style/btn_back"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_data_MainMenuActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cardgame_imageview_tag"
        android:contentDescription="@string/app_name"
        android:textColor="@color/white"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35">

        <ImageView
            android:id="@+id/btn_setting_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/main_menu_imageview_setting_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_setting_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

        <ImageView
            android:id="@+id/btn_home_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_imageview_home_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_home_icon"
            app:layout_constraintLeft_toRightOf="@id/btn_setting_MainMenuActivity"
            app:layout_constraintRight_toLeftOf="@id/btn_sound_MainMenuActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

        <ImageView
            android:id="@+id/btn_sound_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_menu_imageview_sound_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_sound_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.67:1"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <ImageView
            android:id="@+id/food"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="2:3"

            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.6"

            android:src="@drawable/food_card"
            />

        <ImageView
            android:id="@+id/person"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="2:3"

            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.6"

            android:src="@drawable/person"/>

        <ImageView
            android:id="@+id/clothes"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="2:3"

            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintVertical_bias="0.6"

            android:src="@drawable/clothes_card"/>

        <ImageView
            android:id="@+id/toys"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintDimensionRatio="2:3"

            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.6"

            android:src="@drawable/toys_card"/>

<!--        <Button-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            -->
<!--            app:layout_constraintTop_toBottomOf="@id/person"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            -->
<!--            app:layout_constraintVertical_bias="0.2"-->
<!--            -->
<!--            app:layout_constraintHeight_percent="0.1"-->
<!--            app:layout_constraintDimensionRatio="3:1"-->
<!--            -->
<!--            android:background="@drawable/start_game"/>-->




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.4"

        app:layout_constraintVertical_bias="0.9">

        <Button
            android:id="@+id/study_ContentChooseActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintWidth_percent="0.4"

            android:background="@drawable/button_yellow"
            android:text="开始学习"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/game_ContentChooseActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.4"

            android:background="@drawable/button_yellow"
            android:text="开始训练"
            android:textColor="@color/white"
            android:textSize="18sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>