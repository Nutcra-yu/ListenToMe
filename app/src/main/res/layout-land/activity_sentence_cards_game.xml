<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".cognitiveTraining.Sentence.SentenceStudyActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_back_SentenceStudyActivity"
        style="@style/btn_back"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.67:1"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <Button
            android:id="@+id/previous_SentenceStudyActivity"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/linear_SentenceStudyActivity"

            app:layout_constraintWidth_percent="0.1"

            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/left"/>

        <LinearLayout
            android:id="@+id/linear_SentenceStudyActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintDimensionRatio="3:1"

            app:layout_constraintVertical_bias="0.6"

            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card0_SentenceStudyActivity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pinyinSubject_SentenceStudyActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="pin yin"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/iv_cardSubject_SentenceStudyActivity"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintWidth_percent="0.66"
                    app:layout_constraintDimensionRatio="1:1"

                    tools:src="@drawable/card_strawberry"/>

                <TextView
                    android:id="@+id/tv_nameSubject_SentenceStudyActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"

                    tools:text="汉字"
                    android:gravity="center" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card1_SentenceStudyActivity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pinyinVerb_SentenceStudyActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="pin yin"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/iv_cardVerb_SentenceStudyActivity"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintWidth_percent="0.66"
                    app:layout_constraintDimensionRatio="1:1"

                    tools:src="@drawable/card_strawberry"/>

                <TextView
                    android:id="@+id/tv_nameVerb_SentenceStudyActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"

                    tools:text="汉字"
                    android:gravity="center" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card2_SentenceStudyActivity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pinyinObject_SentenceStudyActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"

                    tools:text="pin yin"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/iv_cardObject_SentenceStudyActivity"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintWidth_percent="0.66"
                    app:layout_constraintDimensionRatio="1:1"

                    tools:src="@drawable/card_strawberry"/>

                <TextView
                    android:id="@+id/tv_nameObject_SentenceStudyActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"

                    tools:text="汉字"
                    android:gravity="center" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <Button
            android:id="@+id/next_SentenceStudyActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/linear_SentenceStudyActivity"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.1"

            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/right"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>