<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".cognitiveTraining.Words.WordsStudyActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_back_WordsStudyActivity"
        style="@style/btn_back"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.67:1"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <Button
            android:id="@+id/previous_WordsStudyActivity"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card_WordsStudyActivity"

            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/left"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_WordsStudyActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintVertical_bias="0.6">

            <TextView
                android:id="@+id/pinyin_WordsStudyActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"

                tools:text="pin yin"
                android:gravity="center" />

            <ImageView
                android:id="@+id/card_WordsStudyActivity1"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintDimensionRatio="1:1"

                android:src="@drawable/card_strawberry"/>

            <TextView
                android:id="@+id/name_WordsStudyActivity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"

                tools:text="汉字"
                android:gravity="center" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            app:layout_constraintTop_toBottomOf="@id/card_WordsStudyActivity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_WordsStudyActivity"
            app:layout_constraintRight_toLeftOf="@id/card_WordsStudyActivity"

            tools:text="1/2"
            android:gravity="center"/>

        <Button
            android:id="@+id/next_WordsStudyActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_WordsStudyActivity"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/right"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>