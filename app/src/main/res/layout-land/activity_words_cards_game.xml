<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cognitiveTraining.Words.WordsGameActivity"
    android:background="@drawable/main_background"
    tools:ignore="MissingDefaultResource">

<!--    返回按钮-->
    <ImageView
        android:id="@+id/iv_back_WordsCardsGameActivity"
        style="@style/btn_back"
        tools:ignore="MissingConstraints"/>
<!--    tag:过程数据-->
    <Button
        android:id="@+id/btn_data_MainMenuActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/cardgame_imageview_tag"
        android:text="过程数据"
        android:textColor="@color/white"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"/>
<!--    右上角三个按钮-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35">

        <ImageView
            android:id="@+id/btn_setting_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/main_menu_imageview_setting_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_setting_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

        <ImageView
            android:id="@+id/btn_home_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_imageview_home_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_home_icon"
            app:layout_constraintLeft_toRightOf="@id/btn_setting_MainMenuActivity"
            app:layout_constraintRight_toLeftOf="@id/btn_sound_MainMenuActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

        <ImageView
            android:id="@+id/btn_sound_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_menu_imageview_sound_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_sound_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />


    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    主体-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/train"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.67:1"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

<!--        标题-->
        <TextView
            android:id="@+id/game_titile"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.4"

            app:layout_constraintVertical_bias="0.04"

            android:text="XX训练"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white"
            />

<!--        左边信息栏-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintWidth_percent="0.24"

            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp">

<!--            关卡信息和时间-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintHeight_percent="0.5"

                app:layout_constraintVertical_bias="0.3"
                android:background="@drawable/button_white">

<!--                关卡信息-->
                <TextView
                    android:id="@+id/gameName_WordsGameActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintVertical_bias="0.3"

                    android:text="当前关卡：XX"/>

<!--                时间-->
                <TextView
                    android:id="@+id/time_WordsGameActivity"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintWidth_percent="0.8"

                    app:layout_constraintVertical_bias="0.78"

                    android:gravity="center"
                    android:text="XX:XX"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@drawable/button_green"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            得分-->
            <TextView
                android:id="@+id/score_WordsGameActivity"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_percent="0.2"

                app:layout_constraintVertical_bias="0.86"

                android:gravity="center"
                android:text="XX分"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button_yellow"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        右边两个卡片-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintWidth_percent="0.72"

            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/card_WordsStudyActivity"

                app:layout_constraintDimensionRatio="1:1"

                android:background="@drawable/left"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_WordsStudyActivity"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintDimensionRatio="2:3"

                app:layout_constraintHorizontal_bias="0.2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"

                    android:layout_marginTop="10dp"

                    tools:text="ping ying"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintWidth_percent="0.8"
                    app:layout_constraintDimensionRatio="1:1"

                    android:src="@drawable/card_strawberry"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"

                    android:layout_marginBottom="10dp"

                    tools:text="汉字"
                    android:gravity="center" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/card_WordsStudyActivity"
                app:layout_constraintRight_toLeftOf="@id/card2"


                tools:text="1/2"
                android:gravity="center"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintDimensionRatio="2:3"

                app:layout_constraintHorizontal_bias="0.8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintTop_toTopOf="parent"

                    android:layout_marginTop="10dp"

                    tools:text="ping ying"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintWidth_percent="0.8"
                    app:layout_constraintDimensionRatio="1:1"

                    android:src="@drawable/card_strawberry"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toBottomOf="parent"

                    android:layout_marginBottom="10dp"

                    tools:text="汉字"
                    android:gravity="center" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/card2"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintDimensionRatio="1:1"

                android:background="@drawable/right"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>