            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/part2_2_CardsWordsActivity"
            app:layout_constraintRight_toLeftOf="@id/part2_4_CardsWordsActivity"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.2">

            <ImageView
                android:id="@+id/pic_part2_3_CardsWordsActivity"
                android:layout_width="match_parent"
