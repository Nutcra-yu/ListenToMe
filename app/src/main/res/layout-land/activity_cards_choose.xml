            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/part1_2_CardsWordsActivity"
            app:layout_constraintRight_toLeftOf="@id/part1_4_CardsWordsActivity"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.2">

