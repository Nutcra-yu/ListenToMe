<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/option1_ThreeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/option2_ThreeFragment"

        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintDimensionRatio="2:1"

        android:text="选项1"
        android:background="@drawable/button_purple" />

    <Button
        android:id="@+id/option2_ThreeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/option1_ThreeFragment"
        app:layout_constraintRight_toLeftOf="@id/option3_ThreeFragment"

        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintDimensionRatio="2:1"

        android:text="选项2"
        android:background="@drawable/button_purple" />

    <Button
        android:id="@+id/option3_ThreeFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/option2_ThreeFragment"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintDimensionRatio="2:1"

        android:text="选项2"
        android:background="@drawable/button_purple" />


</androidx.constraintlayout.widget.ConstraintLayout>