<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_back_LanguageAssessActivity"
        style="@style/btn_back"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35">

        <ImageView
            android:id="@+id/btn_setting_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/main_menu_imageview_setting_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_setting_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

        <ImageView
            android:id="@+id/btn_home_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_menu_imageview_home_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_home_icon"
            app:layout_constraintLeft_toRightOf="@id/btn_setting_MainMenuActivity"
            app:layout_constraintRight_toLeftOf="@id/btn_sound_MainMenuActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

        <ImageView
            android:id="@+id/btn_sound_MainMenuActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_menu_imageview_sound_background"
            android:padding="10dp"
            android:src="@drawable/main_menu_imageview_sound_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.23" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/purple_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.67:1"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintVertical_bias="0.1"
            android:text="选择量表"
            android:gravity="center"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"/>

        <Button
            android:id="@+id/btn_ABC_LanguageAssessActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintVertical_bias="0.36"
            android:background="@drawable/button_blue"
            android:text="ABC量表"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_PCDIsentence_LanguageAssessActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintVertical_bias="0.56"
            android:background="@drawable/button_purple"
            android:text="PCDI-句子量表"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_PCDIgesture_LanguageAssessActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintVertical_bias="0.76"
            android:background="@drawable/button_blue"
            android:text="PCDI-手势量表"
            android:textColor="@color/white"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>