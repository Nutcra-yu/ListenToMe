<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingClass,MissingDefaultResource"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">


        <Button
            android:id="@+id/allDone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_blue"
            android:text="allDone"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        返回按钮-->
        <ImageView
            android:id="@+id/iv_back_AccessABCActivity2"
            style="@style/btn_back"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/more"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:src="@drawable/more"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_AccessABCActivity2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.1"

            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="@id/iv_back_AccessABCActivity2" />

        <!--        tag:测量与评估-->
        <Button
            android:id="@+id/btn_data_AccessABCActivity2"

            style="@style/tv_tag"
            tools:ignore="MissingConstraints"

            android:text="测量与评估"
            />

        <!--        题目框-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/blue_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.67:1"
            app:layout_constraintHeight_percent="0.77"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8">

            <TextView
                android:id="@+id/tv_Access_title_AccessABCActivity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="语言障碍评估量表"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_AccessABCActivity2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/assess_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_percent="0.5"

                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintVertical_bias="0.6" />

            <TextView
                android:id="@+id/preQuestion_AccessABCActivity2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="pre_Question"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.12"
                app:layout_constraintHorizontal_bias="0.76"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.28"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/questionStr"

                android:layout_width="0dp"
                android:layout_height="0dp"

                android:text="题目描述"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintLeft_toLeftOf="@id/preQuestion_AccessABCActivity2"

                app:layout_constraintRight_toRightOf="@id/preQuestion_AccessABCActivity2"

                app:layout_constraintTop_toBottomOf="@id/preQuestion_AccessABCActivity2"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.4" />

            <!--            两个选项-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choose_container"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintLeft_toLeftOf="@id/questionStr"
                app:layout_constraintRight_toRightOf="@id/questionStr"

                app:layout_constraintTop_toBottomOf="@id/questionStr"

                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.5">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/submit"
                app:layout_constraintHeight_percent="0.04"
                app:layout_constraintLeft_toLeftOf="@id/choose_container"
                app:layout_constraintRight_toRightOf="@id/choose_container"
                app:layout_constraintTop_toBottomOf="@id/choose_container">

                <ImageButton
                    android:id="@+id/leftbutton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#FAFAFA"
                    android:scaleType="centerInside"
                    android:src="@drawable/leftarrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintRight_toLeftOf="@id/number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.1" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:text="--/--"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.25" />

                <ImageButton
                    android:id="@+id/rightbutton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#FAFAFA"
                    android:scaleType="centerInside"
                    android:src="@drawable/rightarrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintLeft_toRightOf="@id/number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="@drawable/button_purple"
                android:text="提交"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="3:1"

                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintLeft_toLeftOf="@id/choose_container"

                app:layout_constraintRight_toRightOf="@id/choose_container"
                app:layout_constraintTop_toBottomOf="@id/choose_container" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/drawer"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="您的答题情况"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintWidth_percent="0.7" />

        <TextView
            android:id="@+id/drawer_tv2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"

            android:gravity="center"
            android:text="点击题目序号可跳转到当前页面"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.05"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.27"
            app:layout_constraintWidth_percent="0.7" />


        <!--        竖直滚动        -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_drawer_access"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginTop="10dp"
            app:layout_constraintHeight_percent="0.46"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/drawer_tv2"
            app:layout_constraintWidth_percent="0.8"

            />


        <Button
            android:id="@+id/continue_ABC2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:background="#8482fb"
            android:gravity="center"
            android:text="继续答题"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintWidth_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>