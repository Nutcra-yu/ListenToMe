<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".cognitiveTraining.Phrase.PhraseStudyActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_back_PhraseStudyActivity"
        style="@style/btn_back"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.67:1"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <Button
            android:id="@+id/previous_PhraseStudyActivity"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card1_PhraseStudyActivity"

            app:layout_constraintWidth_percent="0.1"

            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/left"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card1_PhraseStudyActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintVertical_bias="0.6">

            <TextView
                android:id="@+id/pinyinVerb_PhraseStudyActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"

                tools:text="pin yin"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_cardVerb_PhraseStudyActivity"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintDimensionRatio="1:1"

                android:src="@drawable/card_strawberry"/>

            <TextView
                android:id="@+id/tv_nameVerb_PhraseStudyActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"

                tools:text="汉字"
                android:gravity="center" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card2_PhraseStudyActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintHorizontal_bias="0.74"
            app:layout_constraintVertical_bias="0.6">

            <TextView
                android:id="@+id/pinyinObject_PhraseStudyActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"

                tools:text="pin yin"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_cardObject_PhraseStudyActivity"
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintDimensionRatio="1:1"

                android:src="@drawable/card_strawberry"/>

            <TextView
                android:id="@+id/tv_nameObject_PhraseStudyActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="parent"

                tools:text="汉字"
                android:gravity="center" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/next_PhraseStudyActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card2_PhraseStudyActivity"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintWidth_percent="0.1"

            app:layout_constraintDimensionRatio="1:1"

            android:background="@drawable/right"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>