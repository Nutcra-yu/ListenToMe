<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <Button
        android:id="@+id/btn_back_access_result"

        style="@style/btn_back"
        tools:ignore="MissingConstraints" />

    <TextView
        style="@style/tv_tag"

        android:text="@string/tag_access"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout

        style="@style/container"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="评估量表测试结果"

            android:textColor="@color/white"

            android:textSize="20sp"

            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_access_result"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@drawable/button_purple_access"
            android:gravity="center"
            tools:text="宝宝名字：熙熙"
            android:textColor="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.1"

            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28"
            app:layout_constraintWidth_percent="0.24" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toLeftOf="@id/tv_name_access_result"
            app:layout_constraintRight_toRightOf="@id/tv_name_access_result"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.46"

            app:layout_constraintWidth_percent="0.4"

            android:background="@drawable/access_result_white_background"
            android:elevation="5dp">

            <TextView
                android:id="@+id/tv_access_name_result"
                android:layout_width="0dp"
                android:layout_height="0dp"

                tools:text="测试：ABC"
                android:gravity="center"
                app:layout_constraintHeight_percent="0.5"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/tv_time_result"
                android:layout_width="0dp"
                android:layout_height="0dp"

                tools:text="测试时间：2023.05.01"
                android:gravity="center"
                app:layout_constraintHeight_percent="0.5"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintWidth_percent="0.5"

                android:textSize="10sp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeStepGranularity="2sp"
                />

            <TextView

                android:id="@+id/tv_accuracy_result"
                android:layout_width="0dp"
                android:layout_height="0dp"

                tools:text="得分：12"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/tv_score_result"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:text="正确率：70%"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintWidth_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>